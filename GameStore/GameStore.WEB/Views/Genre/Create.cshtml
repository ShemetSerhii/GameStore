@model GameStore.WEB.Models.DomainViewModel.EditorModels.GenreEditorModel


<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#" id="EU">EU</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#" id="RU">RU</a>
    </li>
</ul>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group Culture-EU">
        @Html.LabelFor(model => model.Genre.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Genre.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Genre.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group Culture-RU">
        @Html.LabelFor(model => model.Genre.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Genre.NameRu, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.Label(@GameStore.WEB.Resources.Genre.GenreResource.ParentGenre, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("parentGenre", Model.ParentGenres, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Genre.Parent, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@GameStore.WEB.Resources.Genre.GenreResource.CreateButton" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink(@GameStore.WEB.Resources.Genre.GenreResource.BackToList, "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
