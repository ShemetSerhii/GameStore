<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GameStore</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/base/all.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-multiselect.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/jquery-confirm.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/Styles/MainPage.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Styles/StartPage.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Styles/GameList.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Styles/GameDetail.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Styles/Cart.css" rel="stylesheet" type="text/css" />
</head>
<body>
<header>
    <img src="/Content/Images/MainPage/Header.png" class="background-image" />
    <div class="grey-background"></div>
    <div class="header">
        <div class="nav-block">
            <nav class="navbar">
                <div>
                    <div class="header-item logo">
                        @Html.ActionLink("Logo", "Index", "Account")
                    </div>
                </div>
                <div class="nav-menu">

                    @Html.ActionLink(GameStore.WEB.Resources.MainPage.MainPageResource.Games, "Index", "Game", null, new { @class = "nav-link header-item" })

                    @if (Context.User.IsInRole("Administrator") || Context.User.IsInRole("Manager"))
                    {
                        @Html.ActionLink(GameStore.WEB.Resources.MainPage.MainPageResource.Genres, "Index", "Genre", null, new { @class = "nav-link header-item" })
                    }

                    @Html.ActionLink(GameStore.WEB.Resources.MainPage.MainPageResource.Publishers, "Index", "Publisher", null, new { @class = "nav-link header-item" })

                    @if (Context.User.IsInRole("Administrator"))
                    {
                        @Html.ActionLink(GameStore.WEB.Resources.MainPage.MainPageResource.Users, "Index", "Admin", null, new { @class = "nav-link header-item" })
                    }

                    @if (Context.User.IsInRole("Administrator") || Context.User.IsInRole("Manager"))
                    {
                        @Html.ActionLink(GameStore.WEB.Resources.MainPage.MainPageResource.OrderHistory, "History", "Orders", null, new { @class = "nav-link header-item" })

                        @Html.ActionLink(GameStore.WEB.Resources.MainPage.MainPageResource.Orders, "Index", "Orders", null, new { @class = "nav-link header-item" })
                    }

                    @Html.ActionLink(GameStore.WEB.Resources.MainPage.MainPageResource.Basket, "GetBasket", "Order", null, new { @class = "nav-link header-item" })

                    <span class="navbar-text header-item">
                        @Html.Action("GetTotalNumbers", "Order")
                    </span>
                    @if (Context.User.Identity.IsAuthenticated)
                    {
                        <span class="header-item">
                            @GameStore.WEB.Resources.MainPage.MainPageResource.Hi
                            @Context.User.ToString()!
                        </span>
                    }

                    @if (Context.User.IsInRole("Guest"))
                    {
                        @Html.ActionLink(GameStore.WEB.Resources.MainPage.MainPageResource.Login, "Login", "Account", null, new { @class = "nav-link header-item" })
                    }
                    else
                    {
                        @Html.ActionLink(GameStore.WEB.Resources.MainPage.MainPageResource.Logout, "Logout", "Account", null, new { @class = "nav-link header-item" })
                    }
                </div>
            </nav>
        </div>
        <div class="title-block">
            <div class="header-item" id="header-title">What Can Make Your Life Easier?</div>
            <div class="header-item">Empowered Solutions with Simple Process</div>
        </div>
    </div>
</header>

<div class="body-content">
    @RenderBody()
    <div class="articles">
        <article>
            <h3>Get In Touch</h3>
            <div>
                <label>Name</label>
                <div>
                    <input type="text" />
                </div>
            </div>
            <div>
                <label>Email</label>
                <div>
                    <input type="text" />
                </div>
            </div>
            <div>
                <label>Message</label>
                <div>
                    <textarea></textarea>
                </div>
            </div>
            <div class="div-link-button"><a href="#" class="link-button">Submit</a></div>
        </article>
        <article>
            <h3>Twitter Updates</h3>
            <div>
                <div>Devil May Cry 5</div>
                <div><a href="#" class="article-link">http://goo.gl/eJVm</a></div>
                <div class="time-ago">about 1 hour ago reply</div>
            </div>
            <hr />
            <div>
                <div>Dead or Alive 6 Special Edition</div>
                <div><a href="#" class="article-link">http://goo.gl/eJVm</a></div>
                <div class="time-ago">about 1 hour ago reply</div>
            </div>
            <hr />
            <div>
                <div>Resident Evil 2 Deluxe Edition</div>
                <div><a href="#" class="article-link">http://goo.gl/eJVm</a></div>
                <div class="time-ago">about 1 hour ago reply</div>
            </div>
            <div class="div-link-button"><a href="#" class="link-button">Follow Us</a></div>
        </article>
        <article>
            <h3>From the Blog</h3>
            <div>Proin commodo sodales arcu, a volutpat. Nulla convallis. <a href="#" class="article-link">Learn more</a></div>
            <hr />
            <div>Proin commodo sodales arcu, volutpat. Nulla convallis a non.  <a href="#" class="article-link">Learn more</a></div>
            <hr />
            <div>Curabitur a aliquet turpis, sagittis eleifend sem.  <a href="#" class="article-link">Learn more</a></div>
            <hr />
            <div>Nam pellentesque finibus felis eget feugiat. Nulla a nisl non veh.  <a href="#" class="article-link">Learn more</a></div>
            <div class="div-link-button"><a href="#" class="link-button">Visit Blog</a></div>
        </article>
    </div>
</div>

<footer>
    <div class="footer">
        <div>
            <span>Site Links</span>
            <div class="links-block">
                <div>@Html.ActionLink("Games", "Index", "Game")</div>
                <div>@Html.ActionLink("Genres", "Index", "Genre")</div>
                <div>@Html.ActionLink("Publishers", "Index", "Publisher")</div>
                <div>@Html.ActionLink("Orders", "History", "Orders")</div>
                <div>@Html.ActionLink("My Bucket", "GetBasket", "Order")</div>
                <div id="copy-label"><p>&copy; 2007-@DateTime.Now.Year  All Rights Reserved</p></div>
            </div>
        </div>
        <div>
            <span>Company Information</span>
            <div class="links-block">
                <div><a href="#">About</a></div>
                <div><a href="#">Awards</a></div>
                <div><a href="#">Reviews</a></div>
                <div><a href="#">Testimonials</a></div>
                <div><a href="#">Contact</a></div>
            </div>
        </div>
        <div>
            <span>Social Media</span>
            <div class="pictures-block">
                <div><a href="#"><img src="/Content/Images/MainPage/Social Media/Twitter.svg" alt="Twitter" /></a></div>
                <div><a href="#"><img src="/Content/Images/MainPage/Social Media/Facebook.svg" alt="Facebook" /></a></div>
                <div><a href="#"><img src="/Content/Images/MainPage/Social Media/Email.svg" alt="Email" /></a></div>
                <div><a href="#"><img src="/Content/Images/MainPage/Social Media/Instagram.svg" alt="Instagram" /></a></div>
                <div><a href="#"><img src="/Content/Images/MainPage/Social Media/Gmail.svg" alt="Gmail" /></a></div>
            </div>
            <div id="lang-list">
                @using (Html.BeginForm("ChangeCulture", "Account"))
                {
                    <select name="lang">
                        <option disabled selected>ChooseLang</option>
                        <option value="ru">Русский</option>
                        <option value="en">English</option>
                    </select>
                    <input type="submit" name="submit" value="@GameStore.WEB.Resources.MainPage.MainPageResource.Submit">
                }
            </div>
        </div>      
    </div>
</footer>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
<script src="~/Scripts/jquery-confirm.js"></script>
<script src="~/Scripts/bootstrap.bundle.js"></script>
<script src="~/Scripts/bootstrap-multiselect.js"></script>
<script src="~/Scripts/ApplicationScripts.js"></script>

@if (System.Threading.Thread.CurrentThread.CurrentCulture.Name == "ru-RU")
{
    <script src='@Url.Content("~/Scripts/datepicker.ru.js")' type="text/javascript"></script>
}
else
{
    <script src='@Url.Content("~/Scripts/datepicker.en.js")' type="text/javascript"></script>
}
</body>
</html>