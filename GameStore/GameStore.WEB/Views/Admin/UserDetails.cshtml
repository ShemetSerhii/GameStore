@model GameStore.WEB.Models.DomainViewModel.Identity.UserViewModel

<h2>@GameStore.WEB.Resources.Admin.AdminResource.Details</h2>
<div class="list-group">
    <div>
        <span class="font-weight-bold">@Html.DisplayNameFor(model => model.Id):</span>
        @Html.DisplayFor(model => model.Id)
    </div>

    <div>
        <span class="font-weight-bold">@Html.DisplayNameFor(model => model.Login):</span>
        @Html.DisplayFor(model => model.Login)
    </div>

    <div>
        <span class="font-weight-bold">@Html.DisplayNameFor(model => model.Name):</span>
        @Html.DisplayFor(model => model.Name)
    </div>

    <div>
        <span class="font-weight-bold">@Html.DisplayNameFor(model => model.Address):</span>
        @Html.DisplayFor(model => model.Address)
    </div>

    <div>
        <span class="font-weight-bold">@Html.DisplayNameFor(model => model.IsBanned):</span>
        @Html.DisplayFor(model => model.IsBanned)
    </div>

    @if (Model.IsBanned)
    {
        <div>
             <span class="font-weight-bold">@Html.DisplayNameFor(model => model.BanExpires):</span>
            @Html.DisplayFor(model => model.BanExpires)
        </div>
    }
    
        <div class="font-weight-bold">@GameStore.WEB.Resources.Admin.AdminResource.Roles:</div>
    <ul>
        @foreach (var role in Model.Roles)
        {
            <li>@Html.ActionLink(role.Name, null)</li>
        }
    </ul>

</div>
<p>
    @Html.ActionLink(@GameStore.WEB.Resources.Admin.AdminResource.BackToList, "Index")
</p>
